pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: docker
    image: docker:dind
    command: ['cat']
    tty: true
    securityContext:
      privileged: true 
    volumeMounts:
    - name: docker-socket
      mountPath: /var/run/docker.sock
  - name: deployer
    image: dtzar/helm-kubectl:3.13
    command: ['cat']
    tty: true
  volumes:
  - name: docker-socket
    hostPath:
      path: /var/run/docker.sock
'''
        }
    }

    environment {
        DOCKER_REGISTRY = "jolrojasbodev" 
        IMAGE_NAME      = "spring-petclinic"
        // Definición de Releases de Helm para despliegue paralelo
        APP_NAME_MONO   = "petclinic-tfm"
        APP_NAME_VETS   = "petclinic-vets"
        NAMESPACE       = "default" 
    }

    stages {
        stage('Source Code Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Docker Image Build & Push') {
            steps {
                container('docker') {
                    dir('local-deploy/petclinic') {
                        script {
                            // Autenticación en registro privado
                            withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                                sh 'echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin'
                            }
                            
                            // Construcción de artefacto único
                            sh "docker build -t ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest ."
                            sh "docker push ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest"
                            
                            // Extracción de Digest SHA256 para despliegue inmutable
                            env.IMAGE_DIGEST = sh(script: "docker inspect --format='{{index .RepoDigests 0}}' ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest | cut -d'@' -f2", returnStdout: true).trim()
                        }
                    }
                }
            }
        }

        stage('Strangler Fig Architecture Deployment') {
            steps {
                container('deployer') {
                    script {
                        // 1. Provisión de Infraestructura de Datos
                        sh "kubectl apply -f local-deploy/infra/mysql-local-setup.yaml"
                        
                        // 2. Despliegue Release A: Monolito (Core)
                        sh """
                        helm upgrade --install ${APP_NAME_MONO} ./deploy/apps/helm/apps \
                          --namespace ${NAMESPACE} \
                          --values ./local-deploy/petclinic/values-local.yaml \
                          --set image.digest=${env.IMAGE_DIGEST} \
                          --set image.repository=${DOCKER_REGISTRY}/${IMAGE_NAME} \
                          --set autoscaling.enabled=false
                        """

                        // 3. Despliegue Release B: Microservicio Vets (Desagregado)
                        sh """
                        helm upgrade --install ${APP_NAME_VETS} ./deploy/apps/helm/apps \
                          --namespace ${NAMESPACE} \
                          --values ./local-deploy/petclinic/values-vets.yaml \
                          --set image.digest=${env.IMAGE_DIGEST} \
                          --set image.repository=${DOCKER_REGISTRY}/${IMAGE_NAME} \
                          --set autoscaling.enabled=false
                        """
                        
                        // 4. Aplicación de Reglas de Enrutamiento (Ingress)
                        sh "kubectl apply -f local-deploy/infra/strangler-ingress.yaml"

                        // 5. LIMPIEZA DE LEGADO: Eliminar explícitamente el acceso directo (NodePort 30080)
                        // Esto garantiza que el tráfico solo pueda entrar vía Ingress (Puerto 80)
                        sh "kubectl delete -f local-deploy/infra/petclinic-nodeport.yaml --ignore-not-found"
                    }
                }
            }
        }
    }
}