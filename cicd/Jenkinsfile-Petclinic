pipeline {
    agent {
        kubernetes {
            // Definición de Pod de agente con contenedores auxiliares para Docker y Terraform
            yaml '''
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: jenkins-agent-terraform
spec:
  containers:
  - name: docker
    image: docker:dind
    command: ['cat']
    tty: true
    securityContext:
      privileged: true 
    volumeMounts:
    - name: docker-socket
      mountPath: /var/run/docker.sock
  # Contenedor para ejecución de IaC (Terraform)
  - name: terraform
    image: hashicorp/terraform:1.9
    command: ['cat']
    tty: true
  volumes:
  - name: docker-socket
    hostPath:
      path: /var/run/docker.sock
'''
        }
    }

    environment {
        DOCKER_REGISTRY = "jolrojasbodev" 
        IMAGE_NAME      = "spring-petclinic"
        NAMESPACE       = "default" 
    }

    stages {
        stage('Source Code Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Docker Image Build & Push') {
            steps {
                container('docker') {
                    dir('local-deploy/petclinic') {
                        script {
                            // Autenticación en registro de contenedores
                            withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                                sh 'echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin'
                            }
                            
                            // Construcción y publicación de imagen
                            sh "docker build -t ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest ."
                            sh "docker push ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest"
                            
                            // Obtención de digest SHA256 para despliegue inmutable
                            env.IMAGE_DIGEST = sh(script: "docker inspect --format='{{index .RepoDigests 0}}' ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest | cut -d'@' -f2", returnStdout: true).trim()
                        }
                    }
                }
            }
        }

        stage('Infrastructure & App Deployment (Terraform)') {
            steps {
                container('terraform') {
                    dir('local-deploy/terraform') {
                        script {
                            // Inicialización de backend y proveedores
                            sh "terraform init"
                            
                            // Aplicación de cambios de infraestructura e inyección de variables dinámicas
                            sh """
                            terraform apply -auto-approve \
                              -var="image_digest=${env.IMAGE_DIGEST}" \
                              -var="docker_registry=${DOCKER_REGISTRY}" \
                              -var="image_name=${IMAGE_NAME}"
                            """
                        }
                    }
                }
            }
        }
    }
}